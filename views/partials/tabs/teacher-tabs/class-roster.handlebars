                <div class="card-body">
                    <h5 class="card-title">{{user.honorific}} {{user.lastName}}'s Class Roster</h5>
                     <ul id="roster" class="list-group">
                        {{#each students}}
                        <li data-id="{{this.id}}" class="list-group-item">
                           <a href="example/{{this.id}}">{{this.text}}</a>
                           <button class="btn btn-danger float-right delete">ï½˜</button>
                        </li>
                        {{/each}}
                     </ul>
                     <button id="submit">Refresh</button>
                </div>
            </div>
        </div>
    </div>
</div>