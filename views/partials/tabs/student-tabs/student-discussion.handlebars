<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h2>{{msg}}</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">Title:</label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="Subject">
          </div>
          <div class="form-group">
            <label for="example-description">Journal Entry:</label>
            <textarea class="form-control" id="example-description" aria-describedby="example-description" placeholder="What do you want to say?"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h4>Your Journal Entries:</h4>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="discussion/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>